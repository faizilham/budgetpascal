{
  "name": "budgetpascal-wasm",
  "version": "1.0.0",
  "repository": "git@github.com:faizilham/budgetpascal-wasm.git",
  "author": "Faiz Ilham <faizilham.faizz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/cmd/index.js",
    "typecheck": "tsc -p tsconfig.check.json",
    "build": "yarn typecheck && rimraf dist/cmd && parcel build --no-cache --target cmd",
    "start-web": "rimraf dist/web && parcel serve --target web",
    "build-web": "yarn typecheck && rimraf dist/web && parcel build --no-cache --target web",
    "test": "mocha -r ts-node/register 'src/tests/*.test.ts'"
  },
  "targets": {
    "cmd": {
      "context": "node",
      "source": "src-cmd/index.ts",
      "outputFormat": "commonjs"
    },
    "web": {
      "context": "browser",
      "source": "src-web/index.html",
      "outputFormat": "commonjs"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "binaryen": "^102.0.0",
    "readline": "^1.3.0"
  }
}
