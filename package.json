{
  "name": "budgetpascal-wasm",
  "version": "1.0.0",
  "repository": "git@github.com:faizilham/budgetpascal-wasm.git",
  "author": "Faiz Ilham <faizilham.faizz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/cmd/index.js",
    "typecheck": "tsc -p tsconfig.check.json",
    "build": "yarn typecheck && parcel build --no-cache --target cmd --no-optimize",
    "build-cmd": "yarn typecheck && rimraf dist/cmd && parcel build --no-cache --target cmd",
    "start-web": "parcel serve --no-cache --dist-dir dist/web-live --target web",
    "build-web": "yarn typecheck && rimraf dist/web && parcel build --no-cache --target web --detailed-report",
    "test": "mocha -r ts-node/register 'src/tests/*.test.ts'",
    "clean": "rimraf dist/cmd",
    "clean-live": "rimraf dist/web-live"
  },
  "targets": {
    "cmd": {
      "context": "node",
      "source": [
        "src-cmd/index.js",
        "src-cmd/runner.js"
      ],
      "outputFormat": "commonjs",
      "sourceMap": false
    },
    "web": {
      "context": "browser",
      "source": "src-web/index.html",
      "outputFormat": "commonjs",
      "sourceMap": false
    }
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "chai": "^4.3.4",
    "child_process": "^1.0.2",
    "mocha": "^9.1.3",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/codemirror": "^5.60.5",
    "ansi-escapes": "^5.0.0",
    "binaryen": "^102.0.0",
    "codemirror": "^5.63.3",
    "readline": "^1.3.0",
    "xterm": "^4.15.0"
  }
}
